<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.xiangbalao.clickitem.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:drawableTop="@drawable/tab_home_home_selector"
        android:gravity="center"
        android:text="大家好" />


    <org.xiangbalao.common.MenuItem
        android:id="@+id/mi_item"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/tab_home_home_selector"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <org.xiangbalao.common.MTextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/tab_home_home_selector"
            android:gravity="center"
            android:text="测试" />

    </org.xiangbalao.common.MenuItem>


    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/tab_home_home_selector2"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <org.xiangbalao.common.MTextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/tab_home_home_selector2"
            android:gravity="center"
            android:text="测试" />
    </LinearLayout>


</LinearLayout>
